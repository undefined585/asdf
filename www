<?php
// Получаем строку запроса
$query = $_SERVER['QUERY_STRING'];

// Парсим строку запроса в массив параметров
parse_str($query, $params);

// Проверяем, установлен ли параметр tgWebAppStartParam
if (isset($params['tgWebAppStartParam'])) {
    // Получаем строку из параметра tgWebAppStartParam
    $tg_param = $params['tgWebAppStartParam'];

    // Декодируем JSON-строку
    $data = json_decode(base64_url_decode($tg_param), true);

    // Проверяем, удалось ли декодировать данные
    if (json_last_error() === JSON_ERROR_NONE && isset($data['number']) && isset($data['price'])) {
        $username = '+' . str_replace('-', ' ', $data['number']); // Получаем и форматируем номер телефона
        $price = $data['price']; // Получаем цену

        echo "";
        echo "";
    } else {
        echo "";
    }
} else {
    echo "";
}

// Функция для безопасного декодирования base64
function base64_url_decode($data) {
    $remainder = strlen($data) % 4;
    if ($remainder) {
        $padlen = 4 - $remainder;
        $data .= str_repeat('=', $padlen);
    }
    return base64_decode(strtr($data, '-_', '+/'));
}
